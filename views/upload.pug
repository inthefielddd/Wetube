extends layouts/main 

block content
    .form-container 
        form(action=`/vidoes${routes.upload}`, method="post")
            label(for="file") Vidoe File
            input(type="file", id="file", name="file")
            input(type="text", placeholder="Title", name="file")
            textarea(name="description", placeholder="Description")
            input(type="submit", value="Upload Video")